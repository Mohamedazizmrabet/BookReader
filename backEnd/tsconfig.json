{
  "compilerOptions": {
    "target": "ES6",                          // Target JavaScript version
    "module": "commonjs",                     // Module system
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enable ES module interop
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./src",                       // Root directory of input files
    "typeRoots": ["./node_modules/@types", "./src/types"], // Directories for type definitions
    "resolveJsonModule": true,                // Include JSON modules
    "allowSyntheticDefaultImports": true      // Allow default imports from modules with no default export
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"], // Include source files and type declarations
  "exclude": ["node_modules", "dist"]         // Exclude these directories
}
